<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net35</TargetFrameworks>
    <PackageId>$(AssemblyName).Standard</PackageId>
    <Version>1.5.1</Version>
    <Title>.NET Standard version of LINQtoCSV</Title>
    <PackageReadmeFile>readme.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/loudenvier/LINQtoCSV</RepositoryUrl>
    <PackageTags>csv,tab delimited,linq,comma,tab</PackageTags>
    <Company>Loudenvier</Company>
    <Description>The .NET Standard port of the popular, easy to use library to read and write CSV files: LINQtoCSV.</Description>
    <PackageProjectUrl>https://github.com/loudenvier/LINQtoCSV</PackageProjectUrl>
    <PackageIcon>icon.png</PackageIcon>
    <PackageReleaseNotes>This release added support to .NET Standard 2.0</PackageReleaseNotes>
    <PackageOutputPath>..\Nuget\GeneratedPackages</PackageOutputPath>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\img\icon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\readme.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Update="icon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
